extends ../layouts/layout
block _css
  link(rel="stylesheet", href="stylesheets/auth.css")

block _notice
  #container-notice.container-fluid
    .container
      p Board Template is World Class

block _navbar
  include ../components/navbar

block _head
  #container-head.container-fluid
    .container
      p LOGIN

block _body
  #container-body.container-fluid
    .card.auth-card
      .card-header
        //- img(src="images/icon.png", alt="", style='width:40px; height:40px;')
        h3.card-title - Bongjour !! -
      .card-body
        form(action='/user/login')
          .form-group
            label Email
            input.form-control(type='email', placeholder='E-mail')
          .form-group
            label Password
            input.form-control(type='password', placeholder='password')
          .custom-control.custom-checkbox.my-1.mr-sm-2
            input#customControlInline.custom-control-input(type='checkbox')
            label.custom-control-label(for='customControlInline') Remember my preference
          button.btn.btn-danger(type='submit') LOGIN
      .card-footer 
        a.float-center(href='/user/register', style='text-align:center; align-items:center;') Create An Account

block _footer
  include ../components/footer


block _js
extends ../layouts/layout

block _content
  .container
    h1= title
    p Welcome to #{title}
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary
      a.navbar-brand(href='#') Navbar
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarColor01.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.active
            a.nav-link(href='#')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='#') Features
          li.nav-item
            a.nav-link(href='#') Pricing
          li.nav-item
            a.nav-link(href='#') About
        form.form-inline.my-2.my-lg-0
          input.form-control.mr-sm-2(type='text', placeholder='Search')
          button.btn.btn-secondary.my-2.my-sm-0(type='submit') Search
    br
    br
    h1 table
    table.table.table-hover
      thead
        tr
          th(scope='col') #
          th(scope='col') First headad
          th(scope='col') Last ehad
          th(scope='col') Handle hedah
      tbody
        tr.table-primary
          th(scope='row') 1
          td Mark
          td Otto
          td @mdo
        tr.table-secondary
          a(href='#')
            th(scope='row') 2
            td  Jacob
            td Thornton
            td @fat
        tr.table-primary
          th(scope='row') 3
          td(colspan='2') Larry the Bird
          td @twitter

